<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bank_app.CreateAccountController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label text="Surname:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label text="Date of Birth (dd/mm/yyyy):" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="dobField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label fx:id="errorLabel" GridPane.columnIndex="0" GridPane.rowIndex="3" textFill="red" GridPane.columnSpan="2"/>

    <HBox alignment="CENTER_RIGHT" spacing="5" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
        <Button text="Submit" onAction="#onSubmitButtonClick"/>
        <Button text="Cancel" onAction="#onCancelButtonClick"/>
    </HBox>
</GridPane>
